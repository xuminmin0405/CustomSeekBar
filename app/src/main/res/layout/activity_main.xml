<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.codans.customseekbar.MainActivity">

    <com.codans.customseekbar.CustomSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/bg_seekbar_progress_drawable"
        app:cursorBackground="@drawable/cursor"
        app:progressTextColor="#49be38"
        app:progressTextSize="14sp"
        app:scaleLineColor="#49be38"
        app:scaleLineHeight="5dp"
        app:scaleLineWidth="1dp"
        app:scaleTextColor="#e4e4e4"
        app:scaleTextSize="11sp" />
</RelativeLayout>
